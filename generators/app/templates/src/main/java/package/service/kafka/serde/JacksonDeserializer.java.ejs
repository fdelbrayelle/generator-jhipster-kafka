package <%= packageName %>.service.kafka.serde;

import java.io.IOException;
import java.util.Map;
import org.apache.kafka.common.errors.SerializationException;
import org.apache.kafka.common.serialization.Deserializer;

public class JacksonDeserializer<T> extends JacksonAbstract implements Deserializer<T> {
    private Class<T> cls;

    public JacksonDeserializer(Class<T> cls) {
      super();
      this.cls = cls;
    }

    @Override
    public void configure(final Map<String, ?> settings, final boolean isKey) {
    }

    @Override
    public T deserialize(final String topic, final byte[] bytes) {
      if (null == bytes) {
        return null;
      }

      try {
        return getMapper().readValue(bytes, this.cls);
      } catch (final IOException e) {
        throw new SerializationException(e);
      }
    }
}
