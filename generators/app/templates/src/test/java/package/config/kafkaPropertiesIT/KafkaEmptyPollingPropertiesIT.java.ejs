package <%= packageName %>.config.kafkaPropertiesIT;

import org.junit.jupiter.api.DisplayName;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import <%= packageName %>.<%= mainClass %>;
import <%= packageName %>.config.KafkaProperties;

import static org.assertj.core.api.Assertions.assertThat;

@SpringBootTest(classes = <%= mainClass %>.class,properties = "kafka.pollingTimeout=")
@DisplayName("Kafka Polling Properties IT")
class KafkaEmptyPollingPropertiesIT {

    @Autowired
    KafkaProperties kafkaProperties;

    @Test
    @DisplayName("When Polling property is configured with a empty value Should Return the default value")
    void shouldReturnTheDefaultValue() {
        assertThat(kafkaProperties.getPollingTimeout()).isEqualTo(KafkaProperties.DEFAULT_POLL_TIMEOUT);
    }

}
